<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="500" prefWidth="800" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.bd.app.projectbd.Controller.AnggotaBiodataController">
    <left>
        <VBox fx:id="sidebarAnggotaBiodata" alignment="CENTER" prefWidth="300" spacing="20" style="-fx-background-color: linear-gradient(to bottom right, #6C3BB9, #9D50BB); -fx-padding: 30;">
            <ImageView fitHeight="80" fitWidth="307.0">
                <image>
                    <Image url="@../image/PCU-LOGO.png" />
                </image>
            </ImageView>
            <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="Biodata Anggota" />
        </VBox>
    </left>
    <center>
        <VBox fx:id="biodataBox" alignment="TOP_LEFT" spacing="10" style="-fx-padding: 40;">
            <Label fx:id="nrpLabel" style="-fx-font-size: 16px;" text="NRP: " />
            <Label fx:id="namaLabel" style="-fx-font-size: 16px;" text="Nama: " />
            <Label fx:id="programLabel" style="-fx-font-size: 16px;" text="Program: " />
            <Label fx:id="prodiLabel" style="-fx-font-size: 16px;" text="Prodi: " />
            <Label fx:id="emailLabel" style="-fx-font-size: 16px;" text="Email: " />
        </VBox>
    </center>
</BorderPane>

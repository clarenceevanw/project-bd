<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="640.0" prefWidth="1000.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.bd.app.projectbd.Controller.DetailSertifikatController">

    <!-- Area Sertifikat -->
    <AnchorPane layoutX="29.0" layoutY="22.0" prefHeight="537.0" prefWidth="907.0" style="-fx-border-color: #6C3BB9; -fx-border-width: 3; -fx-padding: 20;">

        <!-- Nama Peserta -->
        <VBox alignment="CENTER" layoutX="35.0" layoutY="207.0" prefWidth="860" spacing="5">
            <Label style="-fx-font-size: 16px; -fx-text-fill: #444;" text="Diberikan kepada" />
            <Label fx:id="namaPesertaLabel" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #6C3BB9;" text="Nama Peserta" />
            <Label style="-fx-font-size: 14px; -fx-text-fill: #444;" text="atas partisipasinya sebagai" />
            <Label fx:id="peranLabel" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #6C3BB9;" text="PESERTA" />
        </VBox>

        <!-- Header Sertifikat -->
        <VBox alignment="CENTER" layoutX="35.0" layoutY="34.0" prefWidth="860" spacing="5">
            <Label fx:id="noLabel" style="-fx-font-size: 14px; -fx-text-fill: #6C4BB9;" text="Nomor: 0000/XX/XX/2025" />
        </VBox>

        <!-- Nama Kegiatan -->
        <VBox alignment="CENTER" layoutX="35.0" layoutY="455.0" prefWidth="860" spacing="5">
            <Label fx:id="namaKegiatanLabel" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #6C3BB9;" text="NAMA KEGIATAN" wrapText="true" />
        </VBox>
      <VBox alignment="CENTER_RIGHT" layoutY="488.0" prefWidth="860" spacing="5">
         <children>
      
                    <!-- Tanggal Terbit -->
              <Label fx:id="tanggalLabel" style="-fx-font-size: 14px; -fx-text-fill: #444;" text="Jakarta, 1 Juni 2025" />
         </children>
      </VBox>
    </AnchorPane>

    <!-- Tombol Back (centered bawah) -->
    <Button fx:id="btnBack" layoutX="854.0" layoutY="589.0" onAction="#goBack" style="-fx-background-color: #6C3BB9;                    -fx-text-fill: white;                    -fx-font-weight: bold;                    -fx-font-size: 16px;                    -fx-padding: 10 25;                    -fx-cursor: hand;                    -fx-background-radius: 20;" text="Back" />
</AnchorPane>

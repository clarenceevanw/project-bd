<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.project.bd.app.projectbd.Controller.ClubCrudController"
            prefWidth="800" prefHeight="500">

    <!-- Sidebar kiri -->
    <left>
        <VBox alignment="CENTER" prefWidth="250" spacing="20" style="-fx-background-color: linear-gradient(to bottom right, #6C3BB9, #9D50BB); -fx-padding: 30;">
            <Label text="Kelola Club" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" />
            <Button text="Kembali" onAction="#handleBackToDashboard" prefWidth="150" style="-fx-background-color: white; -fx-text-fill: #6C3BB9; -fx-font-weight: bold; -fx-background-radius: 10;" />
        </VBox>
    </left>

    <!-- Tabel di tengah -->
    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            <TableView fx:id="clubTable" prefHeight="300" prefWidth="500">
                <columns>
                    <TableColumn fx:id="colNama" text="Nama Club" prefWidth="200" />
                    <TableColumn fx:id="colKategori" text="Kategori" prefWidth="150" />
                    <TableColumn fx:id="colPembina" text="Pembina" prefWidth="150" />
                </columns>
            </TableView>

            <!-- Tombol aksi -->
            <HBox spacing="10" alignment="CENTER">
                <Button text="Tambah" onAction="#handleTambah" style="-fx-background-color: #6C3BB9; -fx-text-fill: white; -fx-background-radius: 10;" />
                <Button text="Edit" onAction="#handleEdit" style="-fx-background-color: #9D50BB; -fx-text-fill: white; -fx-background-radius: 10;" />
                <Button text="Hapus" onAction="#handleHapus" style="-fx-background-color: #E57373; -fx-text-fill: white; -fx-background-radius: 10;" />
            </HBox>
        </VBox>
    </center>

    <!-- Form input di kanan -->
    <right>
        <VBox spacing="10" alignment="TOP_LEFT" style="-fx-padding: 20;">
            <Label text="Form Club" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <Label text="Nama Club" />
            <TextField fx:id="fieldNama" promptText="Nama Club" />
            <Label text="Kategori" />
            <TextField fx:id="fieldKategori" promptText="Kategori Club" />
            <Label text="Pembina" />
            <TextField fx:id="fieldPembina" promptText="Nama Pembina" />
            <Button text="Simpan" onAction="#handleSimpan" style="-fx-background-color: #6C3BB9; -fx-text-fill: white; -fx-background-radius: 10;" prefWidth="100" />
        </VBox>
    </right>

</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="500" prefWidth="800" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.bd.app.projectbd.Controller.AnggotaDashboardController">

    <!-- Kiri tetap untuk logo dan judul -->
    <left>
        <VBox fx:id="sidebarDashboardAnggota" alignment="CENTER" prefWidth="300" spacing="20"
              style="-fx-background-color: linear-gradient(to bottom right, #6C3BB9, #9D50BB); -fx-padding: 30;">
            <ImageView fitHeight="80" fitWidth="307.0">
                <image>
                    <Image url="@../image/PCU-LOGO.png" />
                </image>
            </ImageView>
            <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="Dashboard Anggota" />
        </VBox>
    </left>

    <center>
        <VBox alignment="CENTER" spacing="30" style="-fx-padding: 40;">
            <Button onAction="#goToBiodata" prefHeight="50" prefWidth="200" style="-fx-background-color: #6C3BB9; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" text="Lihat Biodata" />
            <Button onAction="#goToBiodata" prefHeight="50" prefWidth="200" style="-fx-background-color: #6C3BB9; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" text="Lihat Daftar Club" />
            <Button onAction="#handleLogout" prefHeight="50" prefWidth="200" style="-fx-background-color: #E1D6F5; -fx-text-fill: #6C3BB9; -fx-font-weight: bold; -fx-background-radius: 10;" text="Logout" />
        </VBox>
    </center>
</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<BorderPane prefHeight="600" prefWidth="900" xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.project.bd.app.projectbd.Controller.KelolaClubController">
    <!-- Sidebar -->
    <left>
        <VBox alignment="TOP_CENTER" prefWidth="200" spacing="20"
              style="-fx-background-color: linear-gradient(to bottom right, #6C3BB9, #9D50BB); -fx-padding: 20;">
            <ImageView fitHeight="75" fitWidth="280.0">
                <image>
                    <Image url="@../image/PCU-LOGO.png"/>
                </image>
            </ImageView>

            <Button fx:id="btnDashboard" maxWidth="180" onAction="#navigateToDashboard"
                    style="-fx-background-color: white; -fx-text-fill: #6C3BB9; -fx-font-weight: bold;"
                    text="Dashboard"/>
            <Button fx:id="btnKelolaClub" maxWidth="180"
                    style="-fx-background-color: white; -fx-text-fill: #6C3BB9; -fx-font-weight: bold;"
                    text="Kelola Club"/>
            <Button fx:id="btnKelolaKegiatan" maxWidth="180" onAction="#navigateToKelolaKegiatan"
                    style="-fx-background-color: white; -fx-text-fill: #6C3BB9; -fx-font-weight: bold;"
                    text="Kelola Kegiatan"/>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="10" style="-fx-padding: 20;">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Manajemen Club"/>

            <HBox alignment="CENTER" spacing="10">
                <Button onAction="#handleAddClub" style="-fx-background-color: #6C3BB9; -fx-text-fill: white;"
                        text="Buat Club Baru"/>
                <Button onAction="#handleEditClub" style="-fx-background-color: #9D50BB; -fx-text-fill: white;"
                        text="Edit Club"/>
                <Button onAction="#handleDeleteClub" style="-fx-background-color: #FF6B6B; -fx-text-fill: white;"
                        text="Hapus Club"/>
                <Button onAction="#handleViewAnggota" style="-fx-background-color: #6C3BB9; -fx-text-fill: white;"
                        text="Lihat Anggota"/>
                <Button onAction="#handleViewKegiatan" style="-fx-background-color: #6C3BB9; -fx-text-fill: white;"
                        text="Lihat Kegiatan"/>
            </HBox>

            <TableView fx:id="clubTable" prefHeight="400" prefWidth="650">
                <columns>
                    <TableColumn fx:id="colNama" prefWidth="150" text="Club"/>
                    <TableColumn fx:id="colDeskripsi" prefWidth="250" text="Deskripsi"/>
                    <TableColumn fx:id="colTahun" prefWidth="100" text="Tahun Berdiri"/>
                    <TableColumn fx:id="colKategori" prefWidth="150" text="Kategori"/>
                </columns>
            </TableView>
        </VBox>
    </center>

</BorderPane>
